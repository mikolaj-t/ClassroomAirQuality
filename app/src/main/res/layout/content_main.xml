<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:text="20 st C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value2" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="210dp"/>
    <TextView
            android:text="@string/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <TextView
            android:text="@string/co2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="231dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value4"
            android:text="88%"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/value3"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value3"
            android:text="1100hpa"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="30dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="231dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/value1"
            android:text="1320ppm"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="231dp"
            android:layout_marginEnd="210dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            android:text="@string/humidity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="210dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:text="@string/air_pressure"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="231dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="210dp"/>
    <include android:layout_width="0dp"
             android:layout_height="174dp"
             layout="@layout/bigboxalert"
             app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="21dp"
             android:layout_marginStart="30dp" android:layout_marginEnd="30dp" android:id="@+id/bigalert"/>
    <include android:layout_width="0dp" android:layout_height="300dp" layout="@layout/graphlayout"
             android:layout_marginTop="28dp"
             app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
             android:layout_marginStart="30dp" app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="30dp" android:id="@+id/chartLayout" app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>